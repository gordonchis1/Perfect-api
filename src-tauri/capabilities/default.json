{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:window:allow-destroy",
    "core:window:allow-close",
    "core:default",
    "fs:allow-document-write",
    "fs:allow-document-read",
    "fs:allow-document-write-recursive",
    "fs:allow-document-read-recursive",
    "fs:allow-create",
    "fs:allow-app-write",
    "fs:allow-copy-file",
    "dialog:allow-open",
    "fs:allow-write-file",
    "dialog:allow-save",
    "opener:default",
    "http:allow-fetch-read-body",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://**"
        },
        {
          "url": "http://**"
        },
        {
          "url": "http://localhost**"
        },
        {
          "url": "https://localhost**"
        },
        { "url": "https://localhost**/" },
        { "url": "http://localhost:**" },
        { "url": "http://127.0.0.1:**" },
        { "url": "http://*:**" },
        { "url": "https://*:**" }
      ]
    }
  ]
}
